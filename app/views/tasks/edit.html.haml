.container
  %h1 EDIT CARD
  %ul
    - @task.errors.full_messages.each do |message|
      %li= message
  = form_with(model: @task, url: board_task_path(id: @task, board_id: @board), method: 'put', local: true ) do |f|
    %div
      = f.file_field :eyecatch
    %div
      = f.label :title, 'Title'
    %div
      = f.text_field :title, class:'text'
    %div
      = f.label :content, 'Content'
    %div
      = f.text_area :content, class:'content'

    = f.hidden_field :user_id, value:current_user.id
    %div
      = f.submit '保存', class:'btn-primary'