.container
  %h1 NEW COMMENT
  %ul
    - @comment.errors.full_messages.each do |message|
      %li= message
  = form_with(model: @comment, url: board_task_comments_path(@comment.task, board_id: @board), local: true ) do |f|
    %div
      = f.label :content, 'Content'
    %div
      = f.text_area :content, class:'content'
    = f.hidden_field :user_id, value:current_user.id  
    %div
      = f.submit '保存', class:'btn-primary'